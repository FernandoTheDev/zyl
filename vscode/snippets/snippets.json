{
    "Main Function": {
        "prefix": "main",
        "body": [
            "int main() {",
            "\t$0",
            "\treturn 0;",
            "}"
        ],
        "description": "Creates the main entry point function"
    },
    "Import Module": {
        "prefix": "imp",
        "body": [
            "import ${1:std.libc.io}"
        ],
        "description": "Imports a full module"
    },
    "Import Selective": {
        "prefix": "impf",
        "body": [
            "import ${1:std.libc.io} : { ${2:printf} }"
        ],
        "description": "Imports specific symbols from a module"
    },
    "Function Definition": {
        "prefix": "fn",
        "body": [
            "${1:void} ${2:function_name}(${3:params}) {",
            "\t$0",
            "}"
        ],
        "description": "Defines a new function"
    },
    "Struct Definition": {
        "prefix": "struct",
        "body": [
            "struct ${1:Name} {",
            "\t${2:type} ${3:member};",
            "}"
        ],
        "description": "Defines a new data structure"
    },
    "Enum Definition": {
        "prefix": "enum",
        "body": [
            "enum ${1:Name} {",
            "\t${2:OPTION_A},",
            "\t${3:OPTION_B}",
            "}"
        ],
        "description": "Defines an enumeration"
    },
    "Type Alias": {
        "prefix": "type",
        "body": [
            "type ${1:NewName} = ${2:ExistingType};"
        ],
        "description": "Defines a type alias"
    },
    "Function Pointer Type": {
        "prefix": "typefn",
        "body": [
            "type ${1:OpName} = fn(${2:int}, ${3:int}) ${4:int};"
        ],
        "description": "Defines a function pointer type"
    },
    "Variable Declaration": {
        "prefix": "var",
        "body": [
            "${1:type} ${2:name} = ${3:value};"
        ],
        "description": "Declares an initialized variable"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if ${1:condition} {",
            "\t$0",
            "}"
        ],
        "description": "If conditional block"
    },
    "If Else Statement": {
        "prefix": "ife",
        "body": [
            "if ${1:condition} {",
            "\t${2}",
            "} else {",
            "\t$0",
            "}"
        ],
        "description": "If-else conditional block"
    },
    "Else If Statement": {
        "prefix": "elif",
        "body": [
            "else if ${1:condition} {",
            "\t$0",
            "}"
        ],
        "description": "Else if block"
    },
    "Switch Case": {
        "prefix": "switch",
        "body": [
            "switch ${1:expression} {",
            "\tcase ${2:value}:",
            "\t\t${3:break;}",
            "\tdefault:",
            "\t\t$0",
            "}"
        ],
        "description": "Switch case structure"
    },
    "For Loop": {
        "prefix": "for",
        "body": [
            "for int ${1:i} = 0; ${1:i} < ${2:count}; ${1:i}++ {",
            "\t$0",
            "}"
        ],
        "description": "Standard C-style for loop"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while ${1:condition} {",
            "\t$0",
            "}"
        ],
        "description": "While loop"
    },
    "Do While Loop": {
        "prefix": "dowhile",
        "body": [
            "do {",
            "\t$0",
            "} while (${1:condition});"
        ],
        "description": "Do-While loop"
    },
    "Printf": {
        "prefix": "pr",
        "body": [
            "printf(\"${1:%d}\\n\", ${2:value});"
        ],
        "description": "Prints formatted output to stdout"
    },
    "Safe Allocation (Malloc)": {
        "prefix": "malloc",
        "body": [
            "${1:Type}* ${2:ptr} = (${1:Type}*) malloc(sizeof ${1:Type});",
            "if ${2:ptr} == null { return -1; }",
            "$0",
            "free(${2:ptr});"
        ],
        "description": "Allocates memory with error checking and cleanup pattern"
    },
    "Safe Array Allocation (Calloc)": {
        "prefix": "calloc",
        "body": [
            "${1:Type}* ${2:arr} = (${1:Type}*) calloc(${3:count}, sizeof ${1:Type});",
            "$0",
            "free(${2:arr});"
        ],
        "description": "Allocates zero-initialized array memory"
    },
    "Pointer Cast": {
        "prefix": "cast",
        "body": [
            "(${1:Type*}) ${2:variable}"
        ],
        "description": "Casts a pointer to another type"
    },
    "Return": {
        "prefix": "ret",
        "body": [
            "return ${1:0};"
        ],
        "description": "Return statement"
    },
    "File Header": {
        "prefix": "header",
        "body": [
            "// Project: ${1:Zyl Project}",
            "// Author: ${2:User}",
            "// Description: ${3:Module description}",
            "",
            "import std.libc.io",
            "",
            "$0"
        ],
        "description": "Standard file header with imports"
    }
}
