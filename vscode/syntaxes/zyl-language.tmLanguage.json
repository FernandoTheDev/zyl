{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "zyl-language",
	"scopeName": "source.zl",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.zyl-language",
				"match": "\\b(import|for|while|do|return|if|else|sizeof|struct|union|enum|int|i32|long|i64|float|f32|double|f64|i1|bool|char|string|void|version|break|continue|type|union|enum|defer|@nomangle)\\b"
			}]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.zyl-language",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.null.zyl-language",
					"match": "\\bnull\\b"
				}
			]
		},
		"strings": {
			"patterns": [{
				"name": "string.quoted.double.zyl-language",
				"begin": "\"",
				"end": "\"",
				"patterns": [{
					"name": "constant.character.escape.zyl-language",
					"match": "\\\\."
				}]
			},
			{
            	"name": "string.quoted.single.zyl-language",
            	"begin": "'",
            	"end": "'",
            	"patterns": [{
            	    "name": "constant.character.escape.zyl-language",
            	    "match": "\\\\."
            	}]
        	}
		]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.zyl-language",
					"match": "//.*$"
				},
				{
					"name": "comment.line.hash.zyl-language",
					"match": "#.*$"
				},
				{
					"name": "comment.block.zyl-language",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
	    "patterns": [
	        	{
	        	    "name": "constant.numeric.binary.zyl-language",
	        	    "match": "\\b0[bB][01](_?[01])*\\b"
	        	},
	        	{
	        	    "name": "constant.numeric.binary.suffix.zyl-language",
	        	    "match": "\\b[01](_?[01])*b\\b"
	        	},
	        	{
	        	    "name": "constant.numeric.hex.zyl-language",
	        	    "match": "\\b0[xX][0-9A-Fa-f](_?[0-9A-Fa-f])*\\b"
	        	},
	        	{
	        	    "name": "constant.numeric.decimal.zyl-language",
	        	    "match": "\\b\\d+(_\\d+)*(\\.\\d+(_\\d+)*)?([LlDdFf])?\\b"
	        	}
	    	]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.zyl-language",
					"match": "\\+|\\-|\\*|\\/|%"
				},
				{
					"name": "keyword.operator.comparison.zyl-language",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.logical.zyl-language",
					"match": "&&|\\|\\||!"
				},
				{
					"name": "keyword.operator.assignment.zyl-language",
					"match": "=|\\+=|\\-=|\\*=|\\/=|%="
				},
				{
					"name": "keyword.operator.bitwise.zyl-language",
					"match": "&|\\||\\^|~|<<|>>"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.zyl-language",
					"match": ";"
				},
				{
					"name": "punctuation.separator.zyl-language",
					"match": ","
				},
				{
					"name": "punctuation.accessor.zyl-language",
					"match": "\\."
				},
				{
					"name": "punctuation.section.braces.zyl-language",
					"match": "\\{|\\}"
				},
				{
					"name": "punctuation.section.brackets.zyl-language",
					"match": "\\[|\\]"
				},
				{
					"name": "punctuation.section.parens.zyl-language",
					"match": "\\(|\\)"
				}
			]
		},
		"functions": {
		    "patterns": [{
		        "name": "entity.name.function.zyl-language",
		        "match": "(?<![a-zA-Z0-9_@])[@a-zA-Z_][@a-zA-Z0-9_]*\\s*(?=\\()"
		    }]
		},
		"identifiers": {
		    "patterns": [{
		        "name": "variable.other.zyl-language",
		        "match": "(?<![a-zA-Z0-9_@])[@a-zA-Z_][@a-zA-Z0-9_]*(?![a-zA-Z0-9_@])"
		    }]
		}
	}
}
